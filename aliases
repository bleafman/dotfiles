# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Personal
alias zet="cd && cd Code/learn && code lace"

# iFit
alias nuke='rm -rf node_modules && nvmi'
alias nvmi="nvm use && yarn"
alias cdi="cd && cd Code/ifit"

# Node.js
alias nvml="nvm use node && yarn"

# Bundler
alias b="bundle"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias s="rspec"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
if [[ -f ~/.aliases.local ]]; then
  source ~/.aliases.local
fi
